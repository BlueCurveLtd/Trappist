<bedrock:BedrockApplication  x:Class="DemoApp.App"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:bedrock="http://ingroupe.innovation.bedrock"
                             xmlns:bedrockcontrols="http://ingroupe.innovation.bedrock/controls"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <bedrock:BedrockApplication.MainWindow>
        <bedrockcontrols:MasterDetail />
    </bedrock:BedrockApplication.MainWindow>
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/InGroupe.Innovation.Wpf.Bedrock.Themes;component/BasicBedrockTheme.xaml" />
             </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</bedrock:BedrockApplication>
