<trappist:TrappistApplication  x:Class="DemoApp.App"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:trappist="http://trappist.bedrock"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                               xmlns:custom="clr-namespace:Trappist.Wpf.Bedrock.Controls.Pages;assembly=Trappist.Wpf.Bedrock.Controls">
    <trappist:TrappistApplication.MainWindow>
        <custom:MasterDetail />
    </trappist:TrappistApplication.MainWindow>
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Trappist.Wpf.Bedrock.Themes;component/BasicBedrockTheme.xaml" />
             </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</trappist:TrappistApplication>
